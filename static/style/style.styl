separator = 25px

.button
  display flex
  justify-content center
  align-items center
  transition all 1s
  width 150px
  height 30px
  border solid 0.5px #000
  background-color #fff
  color #000
  font-size 14px
  margin-bottom separator

  &:hover
    background-color #000
    color #fff

label
  display block

form
  display flex
  justify-content center
  align-items center
  flex-direction column

.field
  margin-top separator
  margin-bottom separator
  width 40%
  font-size 18px

  input
    font-size 18px


  textarea
    width 100%

input
  width 100%
  border 0
  border-bottom 1px solid #000
  outline none

input[type="checkbox"]
  padding 0
  margin separator
  width initial

.error
  margin-top 12.5px
  span
    color rgb(237,71,71)

.dropbox-container
  width 40%

.status-message
  display flex
  width 100%
  height 100vh
  justify-content center
  align-items center
  font-size 36px

  p
    text-align center
    width 60%
